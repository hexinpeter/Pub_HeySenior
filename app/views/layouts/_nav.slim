nav.navbar.navbar-default#cus-nav
  div.container
    / <!-- Brand and toggle get grouped for better mobile display -->
    div.navbar-header
      button.navbar-toggle.collapsed type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false"
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand href="/"
        = image_tag "logo-small.png", width: "134px"

    / <!-- Collect the nav links, forms, and other content for toggling -->
    div.collapse.navbar-collapse#bs-example-navbar-collapse-1
      ul.nav.navbar-nav#site-links
        li
          = link_to 'Browse Requests', tasks_path
        li
          = link_to 'Start a Request', new_task_path

      ul.nav.navbar-nav.navbar-right
        - if !user_signed_in?
          li = link_to "Login", new_user_session_path
          li = link_to "Sign up", new_user_registration_path, class: ""

        - if user_signed_in?
          li.dropdown
            a.dropdown-toggle#user-name href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"
              = current_user.name + ' '
              span.caret
            ul.dropdown-menu
              li
                = link_to "Profile", user_path
              li
                = link_to "Sign Out", destroy_user_session_path, method: 'DELETE'





















